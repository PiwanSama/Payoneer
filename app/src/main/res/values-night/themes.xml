<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Payoneer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/payoneer_orange_dark</item>
        <item name="colorPrimaryVariant">@color/payoneer_orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/payoneer_green_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/payoneer_green_dark</item>
        <item name="colorSecondaryVariant">@color/payoneer_green_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/payoneer_orange_dark</item>
        <!-- Customized theme -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="color">@color/color_font</item>
    </style>
</resources>